@model TransactionRequestViewModel
@{
    ViewData["Title"] = "Transaction";
}

<form method="post" asp-controller="Transaction" asp-action="Transact">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <h2>Create Transaction</h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="TransactionType"></label>
                </div>
                <div class="col-md-6">
                    <select asp-for="TransactionType" asp-items="Html.GetEnumSelectList<Enums.TransactionType>()" required>
                        <option selected="selected" value="">Please select</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row" ng-show="false">
                <div class="col-md-5">
                    <label asp-for="ReceiverAccountNumber"></label>
                </div>
                <div class="col-md-3">
                    <input asp-for="ReceiverAccountNumber" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Amount"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Amount" required/>
                </div>
            </div>
        </div>
    </div>

    <div class="row col-md-offset-10">
        <input type="submit" value="Submit" />
    </div>
</form>