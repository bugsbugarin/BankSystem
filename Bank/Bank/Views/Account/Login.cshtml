@model LoginRequestViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" asp-controller="Account" asp-action="Login">


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-1">
            <label asp-for="LoginName"></label>
        </div>
        <div class="col-md-3">
            <input asp-for="LoginName" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label asp-for="Password"></label>
        </div>
        <div class="col-md-3">
            <input asp-for="Password" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="submit" value="Login" />
            @Html.ActionLink("Not yet registered? Sign Up now!", "Register", "Account")
        </div>
    </div>
</form>
